<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_places_kategori"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.turkapp.kt.villademo.PlacesKategori">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:id="@+id/rl_tarihiyerler"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/tarihiyerler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:text="Tarihi Yerler"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#ececec"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/avm"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:text="Avmler"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#ececec"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/doga"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:text="Doğa Aktiviteleri"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#ececec"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/tiyatro"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:text="Görsel Sanatlar"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="#ececec"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
